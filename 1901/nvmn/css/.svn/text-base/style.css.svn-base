@charset "utf-8";
/* CSS Document */

body {
	margin: 0px;
	background:url(../img/top_bg.jpg) repeat-x;
	font-family:"맑은 고딕";
	font-size:12px;
	line-height:16px
}
img {
	border:none
}
.body_txt {
	line-height:26px;
	font-size:15px;
	font-family:"맑은 고딕";
	text-align:justify; word-break:break-all;
	padding:10px 5px;
}
a {
	text-decoration:none;
	color:#000000
}
a:hover {
	text-decoration:underline;
}
.banner1 {
	background:url(../img/title.jpg) no-repeat;
	background-position:center;
	padding-left:10px;
	font-weight:bold
}
.banner2 {
	background-color:#f8f8f8;
	border-left:1px solid #d6d6d6;
	border-bottom:1px solid #d6d6d6;
	border-right:1px solid #d6d6d6;
	padding:5px 8px
}
.re1{color:#FF9900; font-weight:bold}
.re2{color:#999999; font-size:11px}

input,select,textarea{ border:1px solid #999999}
.style1 {color: #FF0000}

#reply_title { border:1px solid #dedede; background:#fafafa; padding:16px 22px; }
#reply_title img { float:left; }
.reply_txt1 { font-family:"돋움"; font-size:13px; font-weight:bold; margin-left:17px; float:left; }
.reply_txt2 { text-align:right; font-family:"돋움"; font-size:11px; color:#666666; }
.reply_txt2 span { color:#9d9d9d; }
.reply_txt3 { margin-top:18px; }
.reply_box td { border:1px solid #dddddd; }
.box1 { background:#FFF; font-family:"돋움"; font-size:13px; padding:10px 0 0 10px; color:#666; }
#reply { border:1px solid #dedede; padding:16px 22px; font-family:"돋움"; font-size:13px; }
.reply_line { border-top:1px dotted #dedede; height:10px; margin:15px 0 5px 0; }

.scroll { position:relative; top:220px; width:190px; padding-right:5px;}
.scroll_txt { font-size:13px; font-family:"맑은 고딕"; font-weight:bold; color:#FFF; line-height:30px; }

#news-container { width:300px; overflow: hidden; position: relative; }
#news-container ul { position:absolute; left:0px; width:300 px; font-family:"돋움"; font-size:14px; font-weight:bold }
#news-container ul li { width:300px; padding-right:10px; height:30px; line-height:30px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap}


#db_form { width:640px; margin:0 auto; background:#131e35; }
#db_box { background:#FFF; margin:5px; padding:15px; font-size:14px; }
#db_box td { padding-bottom:7px; }
.db_txt { font-weight:bold; text-align:right; padding-right:10px; }
